<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Slider x:Name="slider" HorizontalAlignment="Left" Margin="10" Width="100" VerticalAlignment="Top" Maximum="100"/>
            <ProgressBar HorizontalAlignment="Left" Height="10" Margin="10" VerticalAlignment="Top" Width="100" Value="{Binding Value, ElementName=slider}"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Text="{Binding Value, ElementName=slider, Mode=TwoWay}"/>
            <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Text="{}"/>
            <Button x:Name="btnNext" Content="Next" Click="btnNext_Click"/>
            <Button x:Name="btnPrevious" Content="Next" Click="btnPrevious_Click"/>
        </StackPanel>
    </Grid>
</Window>
