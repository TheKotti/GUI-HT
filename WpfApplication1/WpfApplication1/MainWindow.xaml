<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:views="clr-namespace:WpfApplication1.View"
        mc:Ignorable="d"
        Title="MVVMDemo Contracts" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="LightCyan">
            <views:ContractView x:Name="ContractViewControl" Loaded="ContractViewControl_Loaded" />
            <DataGrid x:Name="dgContracts" ItemsSource="{Binding}" Loaded="dgContracts_Loaded" />
            <StackPanel>
                <TextBox x:Name="txtContractTitle" Width="150" />
                <TextBox x:Name="txtContractLocation" Width="150" />
                <Button x:Name="btnAdd" Content="Lisää" Width="150" Click="btnAdd_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>